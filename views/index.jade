extends layout



block content

    #myModal.modal.fade(role='dialog')
      .modal-dialog
        // Modal content
        .modal-content
          .modal-header
            button.close(type='button', data-dismiss='modal') ×
            h4.modal-title Agregar Item
          .modal-body

            p agregar cosa
             p numeros
            input#start(type="number",name="start",value="", required)
            br
            input#end(type="number",name="end",value="", required)
            br
            p nombre
            
            input#nombre(required, data-error='Please fill this field...', type="text", value='')

            p de que tipo?
            select#tipo(onchange='cambioselect("tipo","tran1","tran2")', required)
                option(value="") -- Select Type --
                each value, key in result

                    option(value="#{key}") #{key}
            
            br
            p Las transiciones disponibles son:


            select#tran1

                option
            br
            select#tran2

                option

          .modal-footer
            button.btn.btn-default(type='button', onclick='versiguardar()') Guardar

     #myUpModal.modal.fade(role='dialog')
